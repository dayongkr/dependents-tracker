{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler"
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx", "packages/**/*.mts"],
  "exclude": ["node_modules, dist"]
}
